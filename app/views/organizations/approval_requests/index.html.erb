<div class="p-4 flex flex-col space-y-2 overflow-y-auto">
    <div class="flex items-center justify-between">
        <h1>Approval Requests</h1>
        <%= link_to "New Request", new_organization_approval_request_path(@organization), class: "btn-primary" %>
    </div>
    <div class="flex flex-col space-y-2">
        <% @approval_requests.each do |approval_request| %>
            <%= render approval_request %>
        <% end %>
    </div>
</div>