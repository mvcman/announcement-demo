<%= form_with model: [organization, approval_request], class: "p-4 flex flex-col space-y-2" do |form| %>
    <div class="">
        <%= form.label :title, class: "block" %>
        <%= form.text_field :title, class: "text-field" %>
    </div>
    <div class="">
        <%= form.label :description, class: "block" %>
        <%= form.text_area :description, class: "text-field" %>
    </div>
    <div class="">
        <%= form.label :images, "Add images", class: "block" %>
        <%= form.file_field :images, multiple: true, class: "text-field" %>
    </div>
    <%= form.submit "Save", class: "btn-primary self-start" %>
<% end %>