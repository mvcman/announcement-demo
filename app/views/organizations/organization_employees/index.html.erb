<div class="flex items-center justify-between p-4">
    <h2>Employees</h2>
    <%= link_to "Add Employee", new_organization_organization_employee_path(@organization), class: "btn-primary" %>
</div>
<div class="flex flex-col space-y-4">
    <% @memberships.each do |oe| %>
        <div class="p-4 shadow flex items-center space-x-2">
            <span><%= oe.user&.profile&.full_name %> --- <%= oe.role %></span>
            <span class="w-2 h-2 rounded-full <%= "active" if oe.user.active %>" data-user-id="<%= oe.user_id %>"></span>
        </div>
    <% end %>
</div>