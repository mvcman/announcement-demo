<div class="w-full h-full overflow-y-auto flex flex-col space-y-4">
    <div class="flex items-center justify-between">
        <h2>My Department</h2>
        <%= link_to "Create New", new_organization_department_path(@organization), class: "btn-primary" %>
    </div>
    <div class="flex flex-col space-y-4">
        <% @departments.each do |department| %>
            <%= render department %>
        <% end %>
    </div>
</div>