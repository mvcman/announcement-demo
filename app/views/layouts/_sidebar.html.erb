 <div class="min-w-16 w-16 h-full flex flex-col py-4 items-center space-y-4 border-r">
    <div class="w-12 h-12 rounded-full bg-red-500 text-white flex items-center justify-center"><span>MW</span></div>

    <% current_user.organizations.each do |org| %> 
       
        <%= active_link_to organization_path(org), class_active: "border-2 border-red-200", class: "w-10 h-10 rounded-md bg-gray-200 text-gray-800 flex items-center justify-center font-bold" do %>
            <%= org.name[0, 2].upcase %>
        <% end %>
    <% end %>
 </div>