<div class="flex flex-col space-y-4">
    <div class="flex items-center space-x-8">
        <h2>My Profile</h2>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "p-2 text-white bg-blue-500 rounded-md text-base font-medium" %>
    </div>
    <div class="flex flex-col space-y-2">
        <% if @user.profile.image.attached? %>
            <%= image_tag url_for(@user.profile.image), class: "w-24 h-24 rounded-full border-3" %>
        <% end %>
        <p class="text-md font-medium text-gray-500">First Name: <span class="font-bold text-gray-700"><%= @profile&.first_name %></span></p>
        <p class="text-md font-medium text-gray-500">Middle Name: <span class="font-bold text-gray-700"><%= @profile&.middle_name %></span></p>
        <p class="text-md font-medium text-gray-500">Last Name: <span class="font-bold text-gray-700"><%= @profile&.last_name %></span></p>
        <p class="text-md font-medium text-gray-500">Address: <span class="font-bold text-gray-700"><%= @profile&.full_address %></span></p>
    </div>
</div>